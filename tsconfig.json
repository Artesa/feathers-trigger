{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": false,
    "declaration": true,
    "types": ["vitest/globals"],
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.js"]
}